@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="account-panel-container">
        <div class="parchment2 card tab-card profile-card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Manage/Index">Username</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Manage/Email">Email</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Manage/Password">Password</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-10 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @RenderSection("Scripts", required: false)
    <script>
        $(function () {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}
