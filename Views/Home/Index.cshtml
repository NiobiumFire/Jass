    @if (!isSignedIn)
{
    <p style="text-align:center">Welcome! <a style="color:var(--col-4)" asp-area="Identity" asp-page="/Account/Login">Sign in</a> or <a style="color:var(--col-4)" asp-area="Identity" asp-page="/Account/Register">create an account</a> for all features.</p>
}
else if (!emailConfirmed)
{
    <p style="text-align:center">Welcome @userManager.GetUserName(User)! <a style="color:var(--col-4)" asp-area="Identity" asp-page="/Account/Manage/Email">Confirm your email</a> for all features.</p>
}
else
{
    <p style="text-align:center">Welcome @userManager.GetUserName(User)!</P>
}


<div class="row justify-content-center">

    <div class="col-3 d-flex justify-content-center align-items-center">
        <img style="width:100%" src="~/images/Jack.png" />
    </div>
    <div class=" menu-buttons col-6 col-lg-3">
        <p style="text-align: center">
            Jass rooms:
            <span id="gameCount">@ViewBag.numGames</span>
        </p>

        <p class="my-0" style="text-align:center">═══ ◆ Ranked ◆ ═══</p>

        @if (!isSignedIn || !emailConfirmed)
        {
            <span title="Sign into an account with a confirmed email address">
                <button type="button" class="btn" style="width: 100%" disabled>
                    Match <i class="bi bi-lock-fill"></i>
                </button>
            </span>
        }
        else
        {
            <button type="button" class="btn" style="width: 100%" onclick="populateLobby()" data-bs-toggle="modal" data-bs-target="#jass-lobby-modal">
                Match
            </button>
        }

        <p class="my-0" style="text-align:center">═══ ◆ Casual ◆ ═══</p>

        <form id="createJassGameForm" asp-area="" asp-controller="Room" asp-action="Index" method="post" class="d-none">
            @Html.AntiForgeryToken()
        </form>

        <div class="btn-group casual-btn-group" style="width: 100%" role="group">
            <button type="button" class="btn">Match</button>
            <button type="button" class="btn" onclick="populateLobby()" data-bs-toggle="modal" data-bs-target="#jass-lobby-modal">Lobby</button>
            <button type="submit" class="btn" form="createJassGameForm">Create</button>
        </div>

        <p class="my-0" style="text-align:center">═══ ◆ General ◆ ═══</p>

        <p><button type="button" class="btn" data-bs-toggle="modal" style="width: 100%" data-bs-target="#rulesModal">Rules</button></p>

        @if (!isSignedIn || !emailConfirmed)
        {
            <span title="Sign into an account with a confirmed email address">
                <button type="button" class="btn" style="width: 100%" disabled>
                    Replay <i class="bi bi-lock-fill"></i>
                </button>
            </span>
        }
        else
        {
            <button type="button" class="btn" onclick="location.href='/Replay/Index'" style="width: 100%">
                Replay
            </button>
        }

        @if (await userManager.GetUserAsync(User) is ApplicationUser user && await userManager.IsInRoleAsync(user, "Admin"))
        {
            <p><button type="button" onclick="location.href='/Training/Index'" class="btn" style="width: 100%">Training Center</button></p>
        }
    </div>

    <div class="col-3 d-flex justify-content-center align-items-center">
        <img style="width:100%" src="~/images/Nine.png" />
    </div>
</div>

<!-- Join Game Modal -->
<div class="modal" tabindex="-1" id="jass-lobby-modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Jass Lobby</h5>
                <div class="d-flex justify-content-center align-items-center">
                    <i class="bi bi-arrow-repeat me-2" style="transform: rotate(25deg); font-size: 1.5em; font-weight:500; color:black; cursor:pointer" onclick="populateLobby()"></i>
                    <button type="button" class="btn-close" style="opacity:initial" data-bs-dismiss="modal"></button>
                </div>
            </div>
            <div class="modal-body px-0 px-sm-1">
                <div class="d-flex justify-content-center">
                    <table class="table table-responsive m-0" style="font-size: 10px">
                        <thead>
                            <tr>
                                <th>Started</th>
                                <th>West</th>
                                <th>North</th>
                                <th>East</th>
                                <th>South</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="lobby-table" id="lobby-table"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<!-- Rules Modal -->
@await Html.PartialAsync("_JassRules")
