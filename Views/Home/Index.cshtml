@using BelotWebApp.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims
@model BelotRoomCreator

@section scripts {
    <script src="~/js/belotlobby.js"></script>
}

@section styles {
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
}

@{
    bool isSignedIn = signInManager.IsSignedIn(User);
    bool emailConfirmed = User.IsInRole("Player");
    ViewData["Title"] = "Home";
}

@await Html.PartialAsync("_Nebula")

<div class="d-flex justify-content-center">
    <div class="row banner banner-title rounded">
        <div class="col-1 col-sm-0"></div>
        <div class="col-1 p-0 crystal-container crystal-container-left">
            @await Html.PartialAsync("_Crystal")
        </div>
        <div class="col-8 d-flex align-items-center justify-content-center">
            @* <h1 class="mb-0" style="font-family: 'Old English Text MT'; font-size: 4.5rem">NiobiumFire Jass</h1> *@
            <img class="w-75-sm" style="height:auto" src="~/images/BannerText.png" />
        </div>
        <div class="col-1 p-0 crystal-container crystal-container-right">
            @await Html.PartialAsync("_Crystal")
        </div>
        <div class="col-1 col-sm-0"></div>
    </div>
</div>

