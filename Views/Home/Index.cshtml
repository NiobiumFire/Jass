@using BelotWebApp.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims
@model BelotRoomCreator

@section scripts {
    <script src="~/js/belotlobby.js"></script>
}

@section styles {
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
}

@{
    bool isSignedIn = signInManager.IsSignedIn(User);
    bool emailConfirmed = User.IsInRole("Player");
    ViewData["Title"] = "Home";
}

<div class="d-flex justify-content-center">
    <div class="row banner py-4 rounded mb-5 mt-3" style="text-align:center; min-height:125px; max-width: 90vw;">
        <div class="col-1"></div>
        <div class="p-0 col-1 d-flex justify-content-center align-items-center">
            <img class="crystal" style="width:100%; height:auto" src="~/images/NiobiumCrystal.png" />
        </div>
        <div class="col-8 d-flex align-items-center justify-content-center">
            <h1 class="mb-0" style="font-family: 'Old English Text MT'">NiobiumFire Jass</h1>
        </div>
        <div class="p-0 col-1 d-flex justify-content-center align-items-center">
            <img class="crystal" style="width:100%; height:auto" src="~/images/NiobiumCrystal.png" />
        </div>
        <div class="col-1"></div>
    </div>
</div>

