
<div class="bg-info p-5 rounded mb-5 mt-5">
    <h1>NiobiumFire Web App</h1>
    <p class="lead">ASP.NET</p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Belot</h2>
        <p>Klaverjassen rooms: @ViewBag.numGames</p>
        <p><button type="button" onclick="location.href='/Room/Index/new'" class="btn btn-primary" style="width: 30%">Create &raquo;</button></p>
        <div class="input-group mb-3">
            <button class="btn btn-primary" type="button" onclick="joinRoomByGuid()" id="button-addon2" style="width: 30%">Join &raquo;</button>
            <input type="text" class="form-control" style="font-size:10px" placeholder="Game Id" id="gameId">
        </div>
        <p style="color: red" id="joinGameError"></p>
        <p><button type="button" onclick="location.href='/Replay/Index'" class="btn btn-primary" style="width: 30%">Replay &raquo;</button></p>
    </div>
    <div class="col-md-6">
        <h2>Train Advanced Agent</h2>
        <p>Control room. Keep out.</p>
        <p><button type="button" onclick="location.href='/Training/Index'" class="btn btn-primary">Training center &raquo;</button></p>
    </div>
</div>

<script>
    joinRoomByGuid = function () {
        s = document.getElementById("gameId").value;
        if (s.length == 36) {
            window.location.href = "/Room/Index/".concat(document.getElementById("gameId").value);
        }
        else {
            document.getElementById("joinGameError").innerHTML = "Invalid Game Id";
        };
        //window.location.href = "/Room/Index".concat(document.getElementById(gameId).innerText);
    };
</script>