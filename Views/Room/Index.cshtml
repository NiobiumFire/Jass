<main>
    <div class="board-container">
        <!-- Control Panel -->
        <div class="control-panel parchment">
            <button class="btn2 px-3 position-relative" id="rulesbtn" value="" data-bs-toggle="modal" data-bs-target="#rulesModal">
                ?
            </button>
            <button class="btn2 px-2" id="rotateSeatsAntiClockwiseBtn" disabled>
                <i class="bi bi-arrow-counterclockwise"></i>
            </button>
            <button class="btn2" id="newGameBtn" disabled>
                New Game
            </button>
            <button class="btn2 px-2" id="rotateSeatsClockwiseBtn" disabled>
                <i class="bi bi-arrow-clockwise"></i>
            </button>
            <button class="btn2 px-3 position-relative" id="chatbtn" value="" data-bs-toggle="offcanvas" data-bs-target="#lobby">
                ···
                <span class="chat-notification" id="chatLogBadge" hidden>
                    <i class="bi bi-envelope-paper-fill"></i>
                </span>
            </button>
        </div>

        <!-- Card Table -->
        <partial name="_BelotCardTable" />

        <!-- User Card Board -->
        <div class="cardboard" id="cardboard">
            <img class="belot-card2" src="~/images/Cards/c4-10.png" id="card0" hidden>
            <img class="belot-card2" src="~/images/Cards/c3-13.png" id="card1" hidden>
            <img class="belot-card2" src="~/images/Cards/c2-10.png" id="card2" hidden>
            <img class="belot-card2" src="~/images/Cards/c1-10.png" id="card3" hidden>
            <img class="belot-card2" src="~/images/Cards/c4-10.png" id="card4" hidden>
            <img class="belot-card2" src="~/images/Cards/c3-10.png" id="card5" hidden>
            <img class="belot-card2" src="~/images/Cards/c2-10.png" id="card6" hidden>
            <img class="belot-card2" src="~/images/Cards/c1-10.png" id="card7" hidden>
            <div class="deck-shimmer" id="deck-shimmer" hidden></div>
            <img class="deck" src="~/images/Other/Deck.png" id="deck" />
        </div>
    </div>
</main>

@Html.AntiForgeryToken()

<!-- Rules Modal -->
@await Html.PartialAsync("_JassRules")

<!-- Suit Selector Modal -->
<div class="modal" id="suit-modal" data-bs-backdrop="static" tabindex="-1" data-bs-keyboard="false">
    @* <div class="modal-dialog modal-low modal-sm modal-dialog-centered" id="suit-modal-dialog"> *@
    <div class="modal-dialog modal-dialog-centered modal-sm" id="suit-modal-dialog">
        <div class="modal-content parchment2">
            <div class="modal-header py-1">
                <h5 class="modal-title">Make a call</h5>
                <i class="bi bi-dash-lg form-btn" onclick="minimiseSuitModal()"></i>
            </div>
            <div class="modal-body p-0">

                <table class="table suit-call-table">
                    <tbody>
                        <tr>
                            <td id="callBtn1">
                                <i class="bi bi-suit-club-fill call-icon-black" id="suit1"></i>
                                <p>Clubs</p>
                            </td>
                            <td id="callBtn2">
                                <i class="bi bi-suit-diamond-fill call-icon-red" id="suit2"></i>
                                <p>Diamonds</p>
                            </td>
                            <td id="callBtn3">
                                <i class="bi bi-suit-heart-fill call-icon-red" id="suit3"></i>
                                <p>Hearts</p>
                            </td>
                            <td id="callBtn4">
                                <i class="bi bi-suit-spade-fill call-icon-black" id="suit4"></i>
                                <p>Spades</p>
                            </td>
                        </tr>
                        <tr>
                            <td id="callBtn5">
                                <i class="allNoTrumps call-icon-purple" id="suit5">A</i>
                                <p>No Trumps</p>
                            </td>
                            <td id="callBtn6">
                                <i class="allNoTrumps call-icon-purple" id="suit6">J</i>
                                <p>All Trumps</p>
                            </td>
                            <td id="callBtn7">
                                <i class="allNoTrumps call-icon-red" id="suit7">×2</i>
                                <p>Double</p>
                            </td>
                            <td id="callBtn8">
                                <i class="allNoTrumps call-icon-red" id="suit8">×4</i>
                                <p>Redouble</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button class="btn2 btn2-red" onclick="nominateSuit(this);" id="callBtn9" disabled hidden>⁹⁄₅</button>
                <button class="btn2" onclick="nominateSuit(this);" id="callBtn10">Pass</button>
            </div>
        </div>
    </div>
</div>

