<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/ico" href="~/Images/NiobiumCrystal.ico">
    <link rel="stylesheet" href="~/Content/StyleSheet.css">
    <title>@ViewBag.Title - NiobiumFire</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

<body class="pb-1 pt-5">
    <nav class="navbar navbar-expand-sm navbar-light fixed-top bg-light py-0">
        <div class="container-fluid">
            <a class="navbar-brand mt-1" href="#">
                <img src="~/Images/NiobiumCrystal.png" height="30" /> NiobiumFire
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" style="font-size:12px">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse w-25" id="navbarScroll">
                <ul class="navbar-nav me-auto navbar-nav-scroll" style="--bs-scroll-height: 200px;">
                    <li class="nav-item">
                        <!--<a class="nav-link active" aria-current="page" href="#">Home</a>-->
                        <a class="nav-link active" href="/Home/Index">
                            <i class="bi bi-house-door" style="font-size: 1.2em; color: darkmagenta;"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active mt-1" href="/Home/About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active mt-1" href="/Home/Contact">Contact</a>

                    </li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content mt-2 my-0">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - NiobiumFire</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>