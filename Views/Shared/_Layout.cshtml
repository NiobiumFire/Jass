@using BelotWebApp.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/ico" href="~/images/NiobiumCrystal.ico">
    <title>@ViewData["Title"] - NiobiumFire</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="~/BelotWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    @RenderSection("styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="d-flex justify-content-start align-items-center">
                    <img src="~/images/NiobiumCrystal.png" height="30" />
                    <ul class="navbar-nav d-flex align-items-center">
                        <li class="nav-item me-1">
                            <a class="navbar-brand mx-0 px-1" asp-area="" asp-controller="Home" asp-action="Index">NiobiumFire</a>
                        </li>

                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link mx-0 px-1" asp-area="" asp-controller="Administration" asp-action="Index">Admin</a>
                            </li>
                        }
                    </ul>
                </div>
                <partial name="_LoginPartial.cshtml" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - NiobiumFire - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
