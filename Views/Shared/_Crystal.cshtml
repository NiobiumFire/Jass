<style>
    :root { /*variables*/
        --col-1: rgb(89, 35, 111); /* dark purple*/
        --col-2: rgb(136, 53, 169); /*light purple*/
        --crystal-width: 60%;
    }

    @@media only screen and (max-width: 768px) {
        :root {
            --crystal-width: 90%;
        }
    }

    .crystal-container {
        display: flex;
        align-items: center;
        perspective: 800px;
    }

        /* left crystal rotates clockwise (default) */
        .crystal-container.crystal-container-left .crystal {
            animation: crystal-rotation 15s linear infinite;
        }

        /* right crystal rotates counter-clockwise */
        .crystal-container.crystal-container-right .crystal {
            animation: crystal-rotation 15s linear infinite reverse;
        }

    .scene {
        position: relative;
        width: 100%;
        height: auto;
        transform-style: preserve-3d;
        transform: rotateX(-0deg) /*rotateY(-10deg)*/;
        animation: crystal-bounce 4s linear infinite !important;
    }

    .crystal {
        position: absolute;
        top: 0%;
        left: 0%;
        width: 100%;
        max-width: 100%;
        height: 100%;
        transform-style: preserve-3d;
    }

    .crystal-quarter {
        position: absolute;
        top: 0%;
        left: 0%;
        width: 100%;
        max-width: 100%;
        height: 100%;
        transform-style: preserve-3d;
        transform-origin: center
    }

    .crystal-quarter-front {
        transform: rotateY(90deg)
    }

    .crystal-quarter-right {
        transform: rotateY(180deg)
    }

    .crystal-quarter-back {
        transform: rotateY(270deg)
    }

    .xyplane {
        position: absolute;
        top: 0%;
        left: 0%;
        width: 50%;
        height: 50%;
        background: rgba(0, 150, 255, 0.2);
        border: 1px solid rgba(0,150,255,0.5);
        transform: translate(50%, 50%) rotateX(90deg);
    }

    .vline {
        position: relative;
        bottom: 0;
        left: 50%;
        width: 2px;
        height: 100%;
        background: red;
        transform: translateX(-50%);
    }

    /* Wrapper for pyramid triangle responsible for translation */
    .crystal-triangle-wrapper {
        position: absolute;
        top: 50%;
        left: 50%;
        aspect-ratio: 1 / 1;
        width: var(--crystal-width);
        height: auto;
        transform-style: preserve-3d;
    }

    /* Pyramid face */
    .crystal-triangle {
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 50% 70%, #9b59b6 2%, rgb(52, 7, 73) 20%, #9b59b6 100%);
        clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        transform-origin: 50% 100%;
        transform: rotateX(-30deg);
    }

    .crystal-triangle-top {
        transform: translate(-100%, -148%) rotateY(90deg);
    }

    .crystal-triangle-bottom {
        transform: translate(-100%, 48%) rotateX(180deg) rotateY(90deg);
    }

    .crystal-rectangle {
        position: absolute;
        top: 50%;
        left: 50%;
        aspect-ratio: 1 / 1;
        width: var(--crystal-width);
        height: auto;
        background: radial-gradient(#9b59b6, 10%, rgb(52, 7, 73), 90%, #9b59b6);
        transform: translate(-100%, -50%) rotateY(-90deg);
    }

    /* Animation */
    @@keyframes crystal-rotation {
        0% {
            transform: rotateY(0deg);
        }

        25% {
            transform: rotateY(90deg);
        }

        50% {
            transform: rotateY(180deg);
        }

        75% {
            transform: rotateY(270deg);
        }

        100% {
            transform: rotateY(360deg);
        }
    }

    @@keyframes crystal-bounce {
        0% {
            transform: translateY(0);
        }

        25% {
            transform: translateY(-100%);
        }

        50% {
            transform: translateY(0);
        }

        75% {
            transform: translateY(20%);
        }

        100% {
            transform: translateY(0);
        }
    }
</style>

<div class="scene">
    @* <div class="vline"></div>
    <div class="xyplane"></div> *@

    <div class="crystal">

        <div class="crystal-quarter crystal-quarter-left">
            <div class="crystal-triangle-wrapper crystal-triangle-top">
                <div class="crystal-triangle"></div>
            </div>

            <div class="crystal-rectangle rleft"></div>

            <div class="crystal-triangle-wrapper crystal-triangle-bottom">
                <div class="crystal-triangle"></div>
            </div>
        </div>

        <div class="crystal-quarter crystal-quarter-right">
            <div class="crystal-triangle-wrapper crystal-triangle-top">
                <div class="crystal-triangle"></div>
            </div>

            <div class="crystal-rectangle rleft"></div>

            <div class="crystal-triangle-wrapper crystal-triangle-bottom">
                <div class="crystal-triangle"></div>
            </div>
        </div>

        <div class="crystal-quarter crystal-quarter-front">
            <div class="crystal-triangle-wrapper crystal-triangle-top">
                <div class="crystal-triangle"></div>
            </div>

            <div class="crystal-rectangle rleft"></div>

            <div class="crystal-triangle-wrapper crystal-triangle-bottom">
                <div class="crystal-triangle"></div>
            </div>
        </div>

        <div class="crystal-quarter crystal-quarter-back">
            <div class="crystal-triangle-wrapper crystal-triangle-top">
                <div class="crystal-triangle"></div>
            </div>

            <div class="crystal-rectangle rleft"></div>

            <div class="crystal-triangle-wrapper crystal-triangle-bottom">
                <div class="crystal-triangle"></div>
            </div>
        </div>

    </div>

</div>
